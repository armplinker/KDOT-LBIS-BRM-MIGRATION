 BEGIN
        BEGIN
                    DBMS_OUTPUT.PUT_LINE('Dropping table VALIDATION_WARNING');
                    EXECUTE IMMEDIATE 'DROP TABLE VALIDATION_WARNING purge';
        EXCEPTION
        WHEN OTHERS THEN NULL;
        END;  

BEGIN
DBMS_OUTPUT.PUT_LINE('Creating table VALIDATION_WARNING');

EXECUTE IMMEDIATE q'[CREATE TABLE VALIDATION_WARNING 
                    (
                    VALIDATION_WARNING_GD VARCHAR2(128 CHAR) NOT NULL,
                    TABLE_NAME VARCHAR2(128 CHAR) NOT NULL,
                    COL_NAME VARCHAR2(128 CHAR) NOT NULL,
                    ROW_PK VARCHAR2(32) NOT NULL,
                    INPUT_VALUE VARCHAR2(3999 CHAR) NOT NULL,
                    PON_APP_USERS_GD VARCHAR2(32) NOT NULL,
                    VALIDATION_DATE DATE NOT NULL,
                    VALIDATION_SOURCE_GENERIC VARCHAR2(128 CHAR) NOT NULL,
                    VALIDATION_SOURCE_SPECIFIC VARCHAR2(1000) NOT NULL,
                    VALIDATION_MESSAGE VARCHAR2(3999 CHAR) NOT NULL) ]';
EXCEPTION
WHEN OTHERS THEN RAISE;
END;

BEGIN
                    EXECUTE IMMEDIATE q'[ALTER TABLE VALIDATION_WARNING ADD CONSTRAINT PK_VALIDATION_WARNING PRIMARY KEY ("VALIDATION_WARNING_GD") USING INDEX TABLESPACE PONT_TBL]';
EXCEPTION
WHEN OTHERS THEN RAISE;
END;

BEGIN
                    EXECUTE IMMEDIATE q'[ALTER TABLE VALIDATION_WARNING ADD CONSTRAINT FK_VALIDATION_WARNING_USERS FOREIGN KEY (PON_APP_USERS_GD) REFERENCES PON_APP_USERS (PON_APP_USERS_GD) ON DELETE CASCADE]';
EXCEPTION
WHEN OTHERS THEN RAISE;
END;
END;
